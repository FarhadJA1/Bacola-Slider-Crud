@model List<Categories>
@{
    ViewData["Title"] = "Category";
    int count = 1;

}
<div class="container mt-3">
    <div class="d-flex justify-content-between">
        <h2>Categories</h2>
        <a class="btn btn-success" asp-action="Create">Create Category</a>
    </div>
    <div class="table-responsive pt-3">
        <table class="table table-dark">
            <thead>
                <tr>
                    <th>
                        #
                    </th>
                    <th>
                        Category Name
                    </th>
                    <th>
                        Settings
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td>

                            @count
                        </td>
                        <td>
                            <span>
                                @category.Name
                            </span>
                            <span class="@(category.IsDeleted==true?"d-none":"d-inline") text-success"> (Active)</span>
                            

                        </td>
                        <td>
                            <a class="btn btn-warning" asp-action="Edit" asp-route-id="@category.Id">Edit</a>
                            
                            <form style="display:inline-block"  method="post" asp-action="Delete" asp-route-id="@category.Id">
                                <button class="btn btn-danger">Delete</button>
                            </form>
                            <button type="submit" class="btn btn-info" asp-action="Delete" asp-route-id="@category.Id">Detail</button>
                        </td>

                    </tr>

                    count++;
                }

            </tbody>
        </table>
    </div>
</div>


